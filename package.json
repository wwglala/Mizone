{
  "private": true,
  "packageManager": "pnpm@7.9.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "gulp -f script/gulpfile.ts --trace-warnings",
    "start": "start-storybook -p 6006",
    "lint": "eslint ./packages --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "pnpm run lint --fix",
    "prettier": "prettier -c --write ./packages/**"
  },
  "dependencies": {
    "@orange-design/utils": "workspace:^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/cli": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@types/gulp": "^4.0.9",
    "@types/node": "^18.7.8",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-plugin-react": "^7.30.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "require-from-string": "^2.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-typescript2": "^0.33.0",
    "sass": "^1.54.5",
    "storybook-addon-sass-postcss": "^0.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,tsx,ts,scss}": [
      "pnpm run lint-fix",
      "pnpm run prettier",
      "git add ."
    ]
  }
}
